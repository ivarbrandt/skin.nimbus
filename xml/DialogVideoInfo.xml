          <left>620</left>
          <width>1160</width>
          <control type="image">
            <width>520</width>
            <height>780</height>
            <top>160</top>
            <bottom>160</bottom>
            <right>-20</right>
            <aspectratio scalediffuse="false">scale</aspectratio>
