<?xml version="1.0" encoding="UTF-8"?>
<window>
  <defaultcontrol always="true">20000</defaultcontrol>
  <controls>
    <control type="button" id="6">
      <texturefocus/>
      <texturenofocus/>
    </control>
    <control type="button" id="8">
      <visible>[String.IsEqual(ListItem.DBtype,movie) | String.IsEqual(ListItem.DBtype,episode)]</visible>
      <texturefocus/>
      <texturenofocus/>
    </control>
    <control type="button" id="10">
      <texturefocus/>
      <texturenofocus/>
    </control>
    <control type="button" id="11">
      <visible>!String.IsEmpty(ListItem.Trailer)</visible>
      <texturefocus/>
      <texturenofocus/>
    </control>
    <control type="group">
      <animation type="WindowOpen">
          <effect type="fade" start="0" end="100" time="400" tween="sine" easing="inout" />
      </animation>
      <animation type="WindowClose">
          <effect type="fade" start="100" end="0" time="400" tween="sine" easing="inout" />
      </animation>
      <animation effect="fade" start="100" end="0" time="200" condition="Window.IsActive(DialogSelect.xml) | Window.IsActive(FileBrowser.xml)">Conditional</animation>
      <control type="image">
        <include>FullScreenDimensions</include>
        <aspectratio>stretch</aspectratio>
        <fadetime>500</fadetime>
        <animation effect="fade" time="400">VisibleChange</animation>
        <texture background="true" colordiffuse="FF333333">$INFO[ListItem.Art(fanart)]</texture>
        <visible>!Skin.HasSetting(Enable.BackgroundBlur)</visible>
      </control>
      <!-- <control type="image">
        <texture colordiffuse="green">lists/contentpanel-fade.png</texture>
        <bordertexture border="21" infill="false">overlays/shadow.png</bordertexture>
        <bordersize>20</bordersize>
        <width>500</width>
        <height>100%</height>
      </control> -->
      <control type="group">
        <control type="list" id="20000">
          <include content="CenterList72">
            <param name="id" value="20000" />
          </include>
          <left>50</left>
          <width>500</width>
          <onleft>back</onleft>
          <onright condition="String.IsEqual(Container(20000).ListItem.Property(id),cast)">50</onright>
          <include content="List">
            <param name="id" value="20000" />
          </include>
          <content>
            <item>
              <visible>Control.IsVisible(8)</visible>
              <label>208</label>
              <onclick>SendClick(8)</onclick>
            </item>
            <item>
              <visible>Control.IsVisible(11)</visible>
              <label>20410</label>
              <!-- <onclick>RunScript(script.nimbus.helper, mode=play_trailer)</onclick> -->
              <onclick>SendClick(11)</onclick>
            </item>
            <item>
              <label>206</label>
              <property name="id">cast</property>
            </item>
            <item>
              <label>Art</label>
              <!-- <label>31001</label> -->
              <onclick>SendClick(10)</onclick>
            </item>
            <item>
              <label>184</label>
              <onclick>SendClick(6)</onclick>
            </item>
          </content>
        </control>
        <control type="group">
          <visible>String.IsEmpty(Container(20000).ListItem.Property(id))</visible>
          <animation effect="fade" start="0" end="100" time="300" delay="300">Visible</animation>
          <animation effect="fade" start="100" end="0" time="300">Hidden</animation>
          <top>160</top>
          <left>410</left>
          <bottom>160</bottom>
          <right>140</right>
          <control type="image">
            <width>520</width>
            <height>780</height>
            <top>0</top>
            <bottom>0</bottom>
            <right>-20</right>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <texture diffuse="masks/poster-big.png" colordiffuse="artwork_dim">$VAR[FlixPosterVar]</texture>
            <bordersize>1</bordersize>
            <bordertexture colordiffuse="FF5B5B5B" border="20" infill="false">masks/poster-big-border.png</bordertexture>
          </control>
          <control type="grouplist">
            <left>12.5</left>
            <width>780</width>
            <top>-30</top>
            <bottom>0</bottom>
            <orientation>vertical</orientation>
            <align>center</align>
            <itemgap>10</itemgap>
            <control type="image">
              <!-- <width>780</width> -->
              <height>233</height>
              <texture colordiffuse="artwork_dim" background="true">$VAR[ClearlogoVar]</texture>
              <aspectratio align="center">keep</aspectratio>
              <visible>[!String.IsEmpty(ListItem.Art(clearlogo)) + Skin.HasSetting(Enable.Clearlogo)] + [String.IsEqual(ListItem.DbType,movie) | String.IsEqual(ListItem.DbType,tvshow) | String.IsEqual(ListItem.DbType,season) | String.IsEqual(ListItem.DbType,episode) | Container.Content(addons)]</visible>
            </control>
            <control type="textbox">
              <top>0</top>
              <left>0</left>
              <right>0</right>
              <height>auto</height>
              <font>font_MainMenu</font>
              <textcolor>unfocused_text</textcolor>
              <align>center</align>
              <aligny>center</aligny>
              <label>[B]$VAR[DialogInfoTitle][/B]</label>
              <visible>[String.IsEmpty(ListItem.Art(clearlogo)) | !Skin.HasSetting(Enable.Clearlogo)] + [String.IsEqual(ListItem.DbType,movie) | String.IsEqual(ListItem.DbType,tvshow) | String.IsEqual(ListItem.DbType,season) | String.IsEqual(ListItem.DbType,episode) | Container.Content(addons)]</visible>
            </control>
            <control type="textbox">
              <visible>!String.IsEmpty(ListItem.TagLine)</visible>
              <height max="180">auto</height>
              <font>font32</font>
              <textcolor>darkgrey</textcolor>
              <align>center</align>
              <aligny>center</aligny>
              <label>$INFO[ListItem.TagLine]</label>
            </control>
            <control type="label">
              <visible>!String.IsEmpty(ListItem.Genre)</visible>
              <height>50</height>
              <font>Font30</font>
              <textcolor>grey</textcolor>
              <align>center</align>
              <aligny>center</aligny>
              <label>[I]$INFO[ListItem.Genre][/I]</label>
            </control>
            <control type="textbox">
              <visible>!String.IsEmpty(ListItem.Plot)</visible>
              <height max="350">auto</height>
              <font>font32</font>
              <textcolor>darkgrey</textcolor>
              <align>center</align>
              <label>$INFO[ListItem.Plot]</label>
              <autoscroll delay="10000" time="5000" repeat="10000">Skin.HasSetting(autoscroll)</autoscroll>
            </control>
          </control>
        </control>
        <control type="group">
          <visible>String.IsEqual(Container(20000).ListItem.Property(id),cast)</visible>
          <animation effect="fade" start="0" end="100" time="300" delay="300">Visible</animation>
          <animation effect="fade" start="100" end="0" time="300">Hidden</animation>
          <left>620</left>
          <width>1160</width>
          <control type="image">
            <width>520</width>
            <height>780</height>
            <top>160</top>
            <bottom>160</bottom>
            <right>-20</right>
            <aspectratio scalediffuse="false">scale</aspectratio>
            <texture diffuse="masks/poster-big.png" colordiffuse="artwork_dim">$INFO[Container(50).ListItem.Art(thumb)]</texture>
            <bordersize>1</bordersize>
            <fadetime>600</fadetime>
            <bordertexture colordiffuse="FF5B5B5B" border="20" infill="false">masks/poster-big-border.png</bordertexture>
          </control>
          <control type="image">
            <visible>Container(50).IsUpdating</visible>
            <animation effect="fade" start="0" end="100" time="100" delay="2000" reversible="false">Visible</animation>
            <width>120</width>
            <aspectratio>keep</aspectratio>
            <texture>loading.gif</texture>
          </control>
          <control type="list" id="50">
            <onright condition="System.AddonIsEnabled(script.embuary.info) + Control.HasFocus(50) + !String.IsEqual(ListItem.DBType,set)">RunScript(script.embuary.info,call=person,query='$ESCINFO[Container(50).ListItem.Label]')</onright>
            <onright condition="System.HasAddon(script.embuary.info) + !System.AddonIsEnabled(script.embuary.info) + !String.IsEqual(ListItem.DBType,set)">EnableAddon(script.embuary.info)</onright>
            <onright condition="!System.HasAddon(script.embuary.info) + !String.IsEqual(ListItem.DBType,set)">InstallAddon(script.embuary.info)</onright>
            <animation effect="fade" start="0" end="100" time="400">VisibleChange</animation>
            <include content="CenterList104">
                <param name="id" value="50" />
            </include>
            <top>67</top>
            <height>940</height>
            <!-- <height>850</height> -->
            <onleft>20000</onleft>
            <include content="CastItem">
              <param name="id" value="50" />
              <param name="MainLabel" value="$INFO[ListItem.Label]" />
              <param name="SubLabel" value="$INFO[ListItem.Label2]" />
            </include>
          </control>
          <!-- <include content="UpDownArrows">
            <param name="container_id" value="50" />
            <param name="posx" value="246" />
            <param name="up_posy" value="80" />
            <param name="down_posy" value="960" />
          </include> -->
        </control>
      </control>
    </control>
  </controls>
</window>