					</control>
					<control type="label">
            <top>320</top>
						<align>center</align>
						<aligny>center</aligny>
						<font>font27</font>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</control>
			</control>
		</definition>
	</include>

</includes>