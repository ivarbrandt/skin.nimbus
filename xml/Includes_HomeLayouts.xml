            <width>200</width>
            <height>7</height>
            <info>ListItem.PercentPlayed</info>
          </control>
          <control type="progress">
            <centerleft>50%</centerleft>
            <top>243</top>
            <width>200</width>
            <height>7</height>
            <info>ListItem.Progress</info>
          </control>
        </control>
			</control>
		</definition>
	</include>

  <include name="WeatherWidgetLayout">
		<!-- <param name="item_limit">30</param> -->
		<param name="icon">$INFO[ListItem.Icon]</param>
		<param name="label2">$INFO[ListItem.Property(Outlook)]</param>
		<param name="focused">false</param>
		<definition>
			<control type="group">
        <top>26</top>
        <left>56</left>
				<width>279</width>
				<height>279</height>
				<control type="group">
          <control type="image">
						<texture colordiffuse="$VAR[FocusedColorVar]">masks/addons-glow.png</texture>
